<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration>

	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%5level [%thread] - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="com.camcam.mapper.BoardMapper">
		<level value="debug" />
	</logger>
	<logger name="com.camcam.mapper.ReplyMapper">
		<level value="debug" />
	</logger>
	<root level="trace">
		<appender-ref ref="stdout" />
	</root>

</configuration>